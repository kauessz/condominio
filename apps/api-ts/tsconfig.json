{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": false,
    "types": ["node"],

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": ["prisma/**"]
}